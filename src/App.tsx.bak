import { useState, useEffect, useRef } from 'react';
import { Routes, Route, useLocation, Link, Navigate } from 'react-router-dom';
import PlayerPage from './pages/PlayerPage';
import AboutPage from './pages/AboutPage';
import TestPage from './pages/TestPage';
import { DspChainPage } from './pages/DspChainPage';
import { DSPPreset } from './useAudioPlayer';
import Visualizer from './components/Visualizer';

// Icons
import { FiHome, FiMusic, FiSettings, FiInfo, FiDisc, FiZap, FiPlay, FiPause, FiSkipBack, FiSkipForward, FiVolume2 } from 'react-icons/fi';
import { FaSpotify } from 'react-icons/fa';

type VisualizerMode = 'neon' | 'organic' | 'plasma';

// Define DSP presets

const DSP_PRESETS: DSPPreset[] = [
  'flat',
  'neutron',
  'ambient',
  'voice'
];

interface NavLinkProps {
  to: string;
  children: React.ReactNode;
  icon?: React.ReactNode;
  className?: string;
  onClick?: () => void;
}

interface TrackInfo {
  title: string;
  artist: string;
  album: string;
  coverArt: string;
  duration: number;
}

const DEFAULT_TRACK: TrackInfo = {
  title: 'Unknown Track',
  artist: 'Unknown Artist',
  album: 'Unknown Album',
  coverArt: 'https://via.placeholder.com/300',
  duration: 0
};

const NavLink = ({ to, children, icon, className = '', onClick }: NavLinkProps) => {
  const location = useLocation();
  const isActive = location.pathname === to;
  
  return (
    <li className="relative group">
      <Link
        to={to}
        onClick={onClick}
        className={`${className} ${
          isActive 
            ? 'text-cyan-300 bg-cyan-900/30 border-l-2 border-cyan-400' 
            : 'text-cyan-400 hover:text-cyan-300 hover:bg-cyan-900/10'
        } flex items-center px-6 py-3 text-sm font-medium transition-all duration-300 group`}
      >
        {icon && <span className="mr-3 text-lg">{icon}</span>}
        <span className="relative z-10">{children}</span>
        {isActive && (
          <span className="absolute right-0 w-1 h-6 bg-cyan-400 rounded-l-full shadow-glow-cyan"></span>
        )}
        <span className="absolute inset-0 bg-gradient-to-r from-cyan-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
      </Link>
    </li>
  );
};

// Digital noise background component
const DigitalNoise = () => (
  <div className="fixed inset-0 overflow-hidden pointer-events-none">
    <div className="absolute inset-0 opacity-[0.03]" style={{
      backgroundImage: `url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' /%3E%3C/svg%3E")`,
    }} />
  </div>
);

// Glowing orb background effect
const GlowingOrbs = () => {
  return (
    <div className="fixed inset-0 overflow-hidden pointer-events-none">
      <div className="absolute top-1/4 -right-10 w-96 h-96 bg-purple-500/20 rounded-full filter blur-3xl mix-blend-screen"></div>
      <div className="absolute bottom-1/4 -left-10 w-96 h-96 bg-cyan-500/20 rounded-full filter blur-3xl mix-blend-screen"></div>
    </div>
  );
};

// Audio player controls component
const PlayerControls = ({ isPlaying, onPlayPause, volume, onVolumeChange, currentTime, duration }: {
  isPlaying: boolean;
  onPlayPause: () => void;
  volume: number;
  onVolumeChange: (value: number) => void;
  currentTime: number;
  duration: number;
}) => {
  const formatTime = (seconds: number) => {
    const mins = Math.floor(seconds / 60);
    const secs = Math.floor(seconds % 60);
    return `${mins}:${secs < 10 ? '0' : ''}${secs}`;
  };

  return (
    <div className="glass p-4 rounded-xl border border-white/5">
      <div className="flex items-center justify-between mb-2">
        <span className="text-xs text-cyan-400 font-mono">{formatTime(currentTime)}</span>
        <div className="flex-1 mx-4 h-1 bg-gray-800 rounded-full overflow-hidden">
          <div 
            className="h-full bg-gradient-to-r from-cyan-500 to-purple-500"
            style={{ width: `${(currentTime / duration) * 100}%` }}
          ></div>
        </div>
        <span className="text-xs text-cyan-400 font-mono">{formatTime(duration)}</span>
      </div>
      
      <div className="flex items-center justify-between">
        <div className="flex items-center space-x-4">
          <button className="p-2 text-cyan-400 hover:text-cyan-300 transition-colors">
            <FiSkipBack className="w-5 h-5" />
          </button>
          <button 
            onClick={onPlayPause}
            className="p-3 bg-cyan-600/30 hover:bg-cyan-600/50 rounded-full text-white transition-all hover:scale-105"
          >
            {isPlaying ? <FiPause className="w-6 h-6" /> : <FiPlay className="w-6 h-6" />}
          </button>
          <button className="p-2 text-cyan-400 hover:text-cyan-300 transition-colors">
            <FiSkipForward className="w-5 h-5" />
          </button>
        </div>
        
        <div className="flex items-center space-x-2">
          <FiVolume2 className="text-cyan-400" />
          <input
            type="range"
            min="0"
            max="100"
            value={volume}
            onChange={(e) => onVolumeChange(Number(e.target.value))}
            className="w-24 accent-cyan-500"
          />
        </div>
      </div>
    </div>
  );
};

export default function App() {
  const [presets, setPresets] = useState<DSPPreset[]>([]);
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [isPlaying, setIsPlaying] = useState(false);
  const [volume, setVolume] = useState(80);
  const [currentTime, setCurrentTime] = useState(0);
  const [duration, setDuration] = useState(0);
  const [visualizerMode, setVisualizerMode] = useState<VisualizerMode>('neon');
  const [dspPreset, setDspPreset] = useState<DSPPreset>('flat');
  const audioContextRef = useRef<AudioContext | null>(null);
  const analyserRef = useRef<AnalyserNode | null>(null);

  const togglePlay = () => {
    setIsPlaying(!isPlaying);
  };

  const handleVolumeChange = (newVolume: number) => {
    setVolume(newVolume);
  };

  // Initialize audio context and analyzer
  useEffect(() => {
    if (typeof window !== 'undefined') {
      const AudioContext = window.AudioContext || (window as any).webkitAudioContext;
      const ctx = new AudioContext();
      audioContextRef.current = ctx;
      const analyser = ctx.createAnalyser();
      analyser.fftSize = 256;
      analyserRef.current = analyser;
    }

    // Set up DSP presets
    setPresets(DSP_PRESETS);

    return () => {
      if (audioContextRef.current) {
        audioContextRef.current.close();
      }
    };
  }, []);

  // Toggle mobile menu
  const toggleMenu = () => {
    setIsMenuOpen(!isMenuOpen);
  };

  // Close mobile menu when route changes
  const location = useLocation();
  useEffect(() => {
    setIsMenuOpen(false);
  }, [location]);

  // Prevent body scroll when mobile menu is open
  useEffect(() => {
    if (isMenuOpen) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = 'unset';
    }
    return () => {
      document.body.style.overflow = 'unset';
    };
  }, [isMenuOpen]);

  // Calculate progress percentage for the progress bar
  const progress = duration > 0 ? (currentTime / duration) * 100 : 0;

  return (
    <div className="min-h-screen bg-gray-900 text-white relative overflow-hidden font-sans">
      {/* Background elements */}
      <div className="fixed inset-0 bg-gradient-to-br from-gray-950 via-black to-gray-900"></div>
      <DigitalNoise />
      <GlowingOrbs />
      
      {/* Grid overlay with scanlines */}
      <div className="fixed inset-0 bg-grid opacity-10"></div>
      <div className="fixed inset-0 scanlines pointer-events-none"></div>
      
      {/* Visualizer with glitch effect on hover */}
      <div className="absolute inset-0 z-10 pointer-events-none overflow-hidden">
        <div className="relative w-full h-full">
          <Visualizer analyzer={analyserRef.current} mode={visualizerMode} />
          <div className="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent pointer-events-none"></div>
        </div>
      </div>

      {/* Desktop Navigation */}
      <div className="fixed top-1/2 left-0 -translate-y-1/2 z-50 hidden md:block">
        <div className="glass border-glow px-8 py-6 rounded-r-2xl border border-cyan-500/30 hover:border-cyan-400/50 transition-all duration-500">
          <nav>
            <ul className="flex flex-col space-y-8 text-4xl md:text-5xl font-bold">
              <li>
                <NavLink 
                  to="/" 
                  className="glitch text-cyan-400 hover:text-cyan-300 transition-all duration-300 neon-glow hover:neon-glow-hover"
                  data-text="RAVR"
                >
                  RAVR
                </NavLink>
              </li>
              <li>
                <NavLink 
                  to="/" 
                  className="text-cyan-400 hover:text-cyan-300 transition-all duration-300 neon-glow hover:neon-glow-hover"
                >
                  Player
                </NavLink>
              </li>
              <li>
                <NavLink 
                  to="/about" 
                  className="text-cyan-400 hover:text-cyan-300 transition-all duration-300 neon-glow hover:neon-glow-hover"
                >
                  About
                </NavLink>
              </li>
              <li>
                <NavLink 
                  to="/test" 
                  className="text-cyan-400 hover:text-cyan-300 transition-all duration-300 neon-glow hover:neon-glow-hover"
                >
                  Audio Test
                </NavLink>
              </li>
              <li>
                <NavLink 
                  to="/dsp-chain" 
                  className="text-cyan-400 hover:text-cyan-300 transition-all duration-300 neon-glow hover:neon-glow-hover"
                >
                  DSP Chain
                </NavLink>
              </li>
            </ul>
          </nav>
        </div>
      </div>

      {/* Mobile Menu Button */}
      <button
        onClick={toggleMenu}
        className="fixed top-4 right-4 z-50 md:hidden p-3 text-cyan-400 hover:text-cyan-300 transition-all duration-300 bg-black/70 hover:bg-black/90 rounded-full border border-cyan-500/30 hover:border-cyan-400/50 shadow-lg hover:shadow-cyan-500/20"
        aria-label="Toggle menu"
      >
        <svg className="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      {/* Mobile Menu Overlay */}
      {isMenuOpen && (
        <div className="fixed inset-0 z-40 bg-black/95 backdrop-blur-xl flex flex-col items-center justify-center md:hidden p-4">
          <div className="absolute inset-0 overflow-hidden">
            <div className="absolute inset-0 bg-grid opacity-10"></div>
            <div className="absolute inset-0 bg-gradient-to-b from-cyan-500/5 to-transparent"></div>
          </div>
          
          <button
            onClick={toggleMenu}
            className="absolute top-6 right-6 text-4xl text-cyan-400 hover:text-cyan-300 transition-all duration-300 hover:rotate-90 z-50"
            aria-label="Close menu"
          >
            &times;
          </button>
          
          <nav className="relative z-10 text-center w-full max-w-sm">
            <div className="mb-12">
              <NavLink 
                to="/" 
                className="glitch text-5xl font-bold text-cyan-400 hover:text-cyan-300 transition-all duration-300 inline-block mb-2"
                data-text="RAVR"
                onClick={toggleMenu}
              >
                RAVR
              </NavLink>
              <div className="h-1 w-16 bg-gradient-to-r from-cyan-500 to-purple-500 mx-auto mt-2 rounded-full"></div>
            </div>
            
            <ul className="space-y-8">
              {[
                { to: "/", label: "Player" },
                { to: "/about", label: "About" },
                { to: "/test", label: "Audio Test" },
                { to: "/dsp-chain", label: "DSP Chain" },
              ].map((item) => (
                <li key={item.to} className="group">
                  <NavLink
                    to={item.to}
                    className="relative inline-block text-3xl font-medium text-cyan-400 hover:text-cyan-300 transition-all duration-300 neon-glow hover:neon-glow-hover"
                    onClick={toggleMenu}
                  >
                    <span className="relative z-10">{item.label}</span>
                    <span className="absolute bottom-0 left-0 w-0 h-0.5 bg-cyan-400 group-hover:w-full transition-all duration-300"></span>
                  </NavLink>
                </li>
              ))}
            </ul>
          </nav>
          
          <div className="absolute bottom-8 left-0 right-0 text-center text-cyan-400/60 text-sm mt-8">
            <p>RAVR Audio Player v1.0</p>
          </div>
        </div>
      )}
      
      {/* Main Content */}
      <div className="relative z-20 pt-20 pb-32 px-4 md:pl-32 md:pr-8 min-h-screen">
        <Routes>
          <Route path="/" element={
            <PlayerPage 
              isPlaying={isPlaying} 
              onPlayPause={togglePlay} 
              volume={volume}
              onVolumeChange={handleVolumeChange}
              currentTime={currentTime}
              duration={duration}
              presets={presets}
              currentPreset={dspPreset}
              onPresetChange={setDspPreset}
            />
          } />
          <Route path="/about" element={<AboutPage />} />
          <Route path="/test" element={<TestPage />} />
          <Route path="/dsp-chain" element={<DspChainPage />} />
          <Route path="*" element={<Navigate to="/" replace />} />
        </Routes>
      </div>
      
      {/* Audio Player Bar */}
      <div className="fixed bottom-0 left-0 right-0 z-30 bg-black/80 backdrop-blur-lg border-t border-cyan-900/50">
        <div className="container mx-auto px-4 py-3">
          <PlayerControls
            isPlaying={isPlaying}
            onPlayPause={togglePlay}
            volume={volume}
            onVolumeChange={handleVolumeChange}
            currentTime={currentTime}
            duration={duration}
          />
        </div>
      </div>
    </div>