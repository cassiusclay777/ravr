{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "ravr-fixed",
  "productName": "RAVR Audio Player",
  "description": "Pokročilý webový audio přehrávač s AI vylepšením a DSP efekty",
  "keywords": [
    "audio",
    "player",
    "dsp",
    "ai",
    "electron",
    "music"
  ],
  "main": "electron.js",
  "version": "1.0.0",
  "author": "Cashi",
  "scripts": {
    "dev": "vite --port 5174",
    "build": "vite build",
    "build:mobile": "node build-mobile.js",
    "deploy:mobile": "node deploy-mobile.js",
    "preview": "vite preview",
    "start": "electron .",
    "dev:desktop": "concurrently -k -c auto \"vite --port 5175\" \"wait-on http://localhost:5175 && cross-env NODE_ENV=development ELECTRON_IS_DEV=1 electron .\"",
    "dev:mobile": "vite --port 5174 --host",
    "pack:desktop:win": "pnpm build && electron-builder --win",
    "pack:desktop:mac": "pnpm build && electron-builder --mac",
    "pack:desktop:linux": "pnpm build && electron-builder --linux",
    "test": "jest",
    "build-safe": "node build-safe.js",
    "tauri:dev": "npx @tauri-apps/cli@2.9.5 dev",
    "tauri:build": "npx @tauri-apps/cli@2.9.5 build"
  },
  "dependencies": {
    "@capacitor/android": "7.4.3",
    "@capacitor/cli": "7.4.3",
    "@capacitor/core": "7.4.3",
    "@capacitor/ios": "7.4.4",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@heroicons/react": "^2.2.0",
    "@microsoft/clarity": "^1.0.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@tauri-apps/api": "2.8.0",
    "@tauri-apps/plugin-shell": "^2.0.0-beta.7",
    "@types/pako": "2.0.4",
    "@types/qrcode": "1.5.6",
    "@xenova/transformers": "2.17.2",
    "cargo": "0.8.0",
    "clsx": "2.1.0",
    "framer-motion": "10.16.4",
    "immer": "10.1.3",
    "lamejs": "1.2.1",
    "lucide-react": "0.544.0",
    "music-metadata": "11.9.0",
    "onnxruntime-web": "1.23.0",
    "pako": "2.1.0",
    "qrcode": "1.5.4",
    "rc-slider": "11.1.9",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "14.3.8",
    "react-icons": "5.5.0",
    "react-router-dom": "6.20.1",
    "standardized-audio-context": "25.3.77",
    "styled-components": "6.1.19",
    "tailwind-merge": "2.2.0",
    "three": "0.180.0",
    "uuid": "^9.0.1",
    "wasm-feature-detect": "^1.6.1",
    "zustand": "4.4.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "2.9.5",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.0.0",
    "@types/three": "^0.155.0",
    "@types/uuid": "^9.0.8",
    "@use-gesture/react": "^10.2.27",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "10.4.16",
    "babel-plugin-styled-components": "^2.1.4",
    "baseline-browser-mapping": "2.8.32",
    "concurrently": "8.2.1",
    "cross-env": "7.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "8.4.31",
    "rimraf": "^5.0.5",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "3.3.5",
    "terser": "^5.24.0",
    "ts-jest": "^29.4.4",
    "typescript": "^4.8.4",
    "vite": "7.2.6",
    "vite-plugin-pwa": "1.0.3",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ravr.audioplayer",
    "productName": "RAVR Audio Player",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron.js"
    },
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
